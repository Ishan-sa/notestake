<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Create a new note</title>

    <!-- Main Quill library -->
    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

    <!-- Theme included stylesheets -->
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
    <link href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet" />

    <!-- Core build with no theme, formatting, non-essential modules -->
    <link href="//cdn.quilljs.com/1.3.6/quill.core.css" rel="stylesheet" />
    <script src="//cdn.quilljs.com/1.3.6/quill.core.js"></script>
  </head>

  <body>
    <h1 class="childHeadingContainer" id="NewNoteHeader">Create a New Note</h1>

    <form class="formBox" action="/notes" method="POST">
      <label for="titleInput">Title</label>
      <input
        type="text"
        name="title"
        class="titleInput"
        placeholder="Enter a title..."
      />
      <label for="contentsInput">Content</label>
      <textarea
        name="contents"
        class="contentsInput"
        cols="30"
        rows="10"
        placeholder="Enter your content..."
      ></textarea>
      <div class="btnContainer">
        <button type="submit" class="btn btn-primary primaryNoteBtn">
          Create Note +
        </button>
      </div>
    </form>

    <div id="toolbar"></div>
    <div id="editor"></div>
